<script>
  var base=prompt("Inserisci la base del rettangolo","");
  var altezza=prompt("Inserisci l'altezza del rettangolo","");
  
  var area=base*altezza;
  var perimetro=2*(base+altezza);

  arearettangolo.innerHTML=area;
  perimetrorettangolo.innerHTML=perimetro;
//calcolo cerchio//
  var raggio=prompt("Inserisci il raggio del cerchio","");
  var pigreco=3.14;

  var perimetrocerchio=2*pigreco*raggio;
  var areacerchio=pigreco*raggio*raggio;

  perimetrocerchio1.innerHTML=perimetrocerchio;
  areacerchio1.innerHTML=areacerchio;
//calcolo triangolo//
 var basetriangolo=prompt("Inserisci la base del triangolo","");
  var altezzatriangolo=prompt("Inserisci l'altezza del triangolo","");

 var areatriangolo=(basetriangolo*altezzatriangolo)/2;
 var perimetrotriangolo=3*basetriangolo;


 areatriangolo1.innerHTML=areatriangolo;
 perimetrotriangolo1.innerHTML=perimetrotriangolo;

//tabella//

 
