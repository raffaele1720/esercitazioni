    document.getElementById("play4").onclick= function riproducimatch()
    {
      var eta=prompt("verifica la tua eta' per vedere  il match");
      if (eta>=18) 
      {
        risposta.innerHTML="<span style='color:green; font-size:300%; font-weight:bolder; margin-left:30%; margin-top:6%; position:absolute; text-transform:uppercase; text-shadow: 2px 2px 4px #000000;'>puoi vedere il match ✅</span>";
      }

      else 
      {
        risposta.innerHTML="<span style='color:red; font-size:300%; font-weight:bolder; margin-left:30%; margin-top:6%; position:absolute; text-transform:uppercase; text-shadow: 2px 2px 4px #000000;'>non puoi vedere il match ❌</span>";
      }
   
    }
   //fine verifica eta' per vedere il match//

    //funzione avvia film in base alla categoria selezionata//
   
   
   
    function avvia(){
     

  var iniziofilm = film.value
 
  if (iniziofilm=="storico")
  
  { demo.innerHTML="<span style=position:absolute;margin-top:25%;color:red;font-weight:bolder;text-transform:uppercase; text-shadow:2px 2px 2px rgba(206,89,55,0);'>avvio film storico in corso</span>";}
  else if (iniziofilm=="commedia")
  { demo.innerHTML="<span style=position:absolute;margin-top:25%;color:red;font-weight:bolder;text-transform:uppercase; text-shadow:0 -2px 10px #ff0, 0 -10px 20px #ff8000, 0 -18px 40px #F00, 40px 40px 20px rgba(206,89,55,0);'>avvio film commedia in corso</span>";}
 
  else 
  { demo.innerHTML="<span style=position:absolute;margin-top:25%;color:red;font-weight:bolder;text-transform:uppercase; text-shadow:2px 2px 2px rgba(206,89,55,0);'>avvio serie tv in corso</span>";}
  



}
 

//fine funzione avvia film in base alla categoria selezionata//
  
   

   

